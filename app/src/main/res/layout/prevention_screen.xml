<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idname">

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FC9"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/btn_20"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/prevention"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false" />
        <View android:layout_height="wrap_content"
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/textView12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Prevention"
            android:textStyle="bold"
            android:id="@+id/textView12"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="32dp"
            android:layout_marginLeft="0dp" />
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f8f3ad"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false">

        <ImageButton
            android:id="@+id/btn_1"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_gravity="left"
            android:layout_marginRight="256dp"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/btn_2"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_marginLeft="265dp"
            android:background="@drawable/tips"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textColor="#f92b2b"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp" />




    </RelativeLayout>

    <!-- Scrollable Item below header and above footer -->
    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:background="#a59785"
        android:layout_below="@id/header" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#6d96a5"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Check you some new tips"
                android:id="@+id/textView3"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ff0c050d"
                android:layout_below="@+id/textView16"
                android:layout_weight="6.18"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/prevention_info"
                android:id="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0c050d"
                android:layout_below="@+id/textView16"
                android:layout_weight="6.18"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:accessibilityLiveRegion="none"
                android:autoText="false"
                android:capitalize="sentences" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="How do you know if you are obese?"
                android:id="@+id/textView5"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ff0c050d"
                android:layout_below="@+id/textView16"
                android:layout_weight="6.18"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Obseity_how"
                android:id="@+id/textView6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ff0c050d"
                android:layout_below="@+id/textView16"
                android:layout_weight="6.18"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:accessibilityLiveRegion="none"
                android:autoText="false"
                android:capitalize="sentences" />

        </LinearLayout>



    </ScrollView>


</RelativeLayout>